{
  "extends": [
    "@react-native-community",  
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended"
  ],
  "plugins" : [
    "@typescript-eslint"
  ],
  "globals": {
    "JSX":true
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx", ".d.ts", ".native.js"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "rules": {
    "import/no-unresolved": "off",
    "import/named": "off",
    "comma-dangle": "off",
    "import/order": "error"
  }
}
